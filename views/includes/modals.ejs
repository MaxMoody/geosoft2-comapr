<!-- Share Project Dialogue -->
<div id="shareProjectModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Share Project</h4>
            </div>
                <div class="modal-body">
                    <div>Invite a user via entering his E-mail address here:</div>
                    <table class="table table-newproject-modal">
                        <tr>
                            <td><label for="shareEmailInput">Share with</label></td>
                            <td><input type="text" placeholder="E-mail address" class="form-control" id="shareEmailInput"></td>
                        </tr>
                        <tr>
                            <td>Permissions</td>
                            <td><fieldset>
                                    <label for="allowRead">Read</label> <input type="checkbox" id="allowRead"><br>
                                    <label for="allowWrite">Write</label> <input type="checkbox" id="allowWrite"><br>
                                    <label for="allowShare">Share</label> <input type="checkbox" id="allowShare"><br>
                                </fieldset></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <a title="Cancel" data-toggle="tooltip" type="button" class="btn btn-danger btn-md" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
                    <a title="Share Project" data-toggle="tooltip" type="button" class="btn btn-success btn-md" data-dismiss="modal" onclick ="shareProject('<%= typeof project != 'undefined' ? project.hashProject : '' %>')"><i class="glyphicon glyphicon-ok"></i> Share Project</a>
                </div>
        </div>
    </div>
</div>

<!-- Edit User Dialogue -->
<div id="editUserModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit User</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid" id="content">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xs-offset-0 col-sm-offset-0 col-md-offset-0 col-lg-offset-0 toppad">


                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title"><%= user.name %></h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">


                                    <div class=" col-md-9 col-lg-9 ">
                                        <table class="table table-user-information">
                                            <tbody>


                                            <tr>
                                                <td>Name</td>
                                                <td><input type="text" id="editname" value="<%= user.name %>"
                                                           class="form-control"></td>
                                            </tr>

                                            <tr>
                                                <td>City</td>
                                                <td><input type="text" id="editcity" value="<%= user.city %>"
                                                           class="form-control"></td>
                                            </tr>

                                            <tr>
                                                <td>Country</td>
                                                <td><%- include('cl_dropdown.ejs') %></td>
                                            </tr>

                                            <tr>
                                                <td>E-Mail</td>
                                                <td><input type="text" id="editemail" value="<%= user.email %>"
                                                           class="form-control"></td>
                                            </tr>
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="pull-right">
                            <a title="Cancel" data-toggle="tooltip" type="button" class="btn btn-danger btn-lg"
                               data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i></a>
                            <a title="Save changes" data-toggle="tooltip" onclick ="editUser()" type="button"
                               class="btn btn-success btn-lg"><i class="glyphicon glyphicon-floppy-disk"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



