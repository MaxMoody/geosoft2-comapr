<!-- New Project Dialogue -->
<div id="newProjectModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Project</h4>
            </div>
            <form action="/api/newProject" method="post">
                <div class="modal-body">
                    <div>Create a new project.</div>
                    <table class="table table-newproject-modal">
                        <tr>
                            <td>Name</td>
                            <td><input type="text" placeholder="The name of your project" class="form-control"
                                       name="projectname" id="project-name"></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <a title="Cancel" data-toggle="tooltip" type="button" class="btn btn-danger btn-md" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cancel</a>
                    <a title="Create project" data-toggle="tooltip" type="button" class="btn btn-success btn-md" data-dismiss="modal" onclick ="newProject($('#project-name').val());"><i class="glyphicon glyphicon-ok"></i> New Project</a>
                </div>
            </form>
        </div>
    </div>
</div>

