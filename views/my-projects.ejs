<body>
<% if(typeof user == 'undefined') { %>
<%- include('includes/navbar_logged-out.ejs'); %>
<% } else { %>
<%- include('includes/navbar.ejs'); %>
<% } %>

<div class="container-fluid">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-default">
        <div class="panel-heading clearfix">
                <h2 class="panel-title pull-left" style="padding-top: 10px;padding-left: 5px; "><b>My Projects</b></h2>
                    <div class="btn-group pull-right" style="padding-right: 8px">
                                <a title="New Project" data-toggle="modal" href="#newProjectModal" type="button" class="btn btn-success btn-md"><i class="glyphicon glyphicon-plus" ></i> New Project</a>
                    </div>


            </div>

            <div class="panel-body">

                     <table class="table table-condensed" style="margin-bottom: 0px">
                         <thead>

                             <% for(i = 0; i < rows.length; i++) { %>
                            <tr>
                                <form action="/deleteProject" method= "post">
                                    <td><a href="/map-view"><%= rows[i].projectname %></a>
                                        <span class="pull-right">
                                            <a href="#" data-original-title="invite user" data-toggle="tooltip" type="button" class="btn btn-info"><i class="glyphicon glyphicon-share"></i> Invite User</a>
                                            <!-- FIXME -->
                                            <a data-original-title="Remove this project" data-toggle="tooltip" onclick="deleteProject(<%= rows[i].projectid %>); window.location.reload()"
                                            class="btn btn btn-danger"><i class="glyphicon glyphicon-remove"></i> Delete Project</a>
                                        </span>
                                    </td>
                                </form>
                            </tr>
                            <% } %>

                         </thead>
                    </table>

            </div>
        </div>
    </div>
</div>

