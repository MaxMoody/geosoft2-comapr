<script type="text/javascript">
    $('body').vegas({
        color: '#000000',
        delay: 7000,
        preload: true,
        timer: false,
        shuffle: true,
        transition: 'fade',
        transitionDuration: 2500,
        slides: [
            { src: "images/background/coast-1149735_1920.jpg"},
            { src: "images/background/earth-11048_1920.jpg"},
            { src: "images/background/earth-1990298_1920.jpg"},
            { src: "images/background/globe-1290377_1920.jpg"},
            { src: "images/background/satellite-1820063_1920.jpg"}
        ]
    });
</script>
