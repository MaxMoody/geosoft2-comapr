<script src="/socket.io/socket.io.js"></script>
<script src="javascripts/custom/chat_client.js"></script>
<script src="javascripts/custom/r-code.js"></script>

<script src="javascripts/custom/sidebar-toggle.js"></script>

</body>
</html>
